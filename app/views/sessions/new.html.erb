<div class="jumbotron user-auth-panel">
  <h1 class="page-header">Welcome to Vendrio!</h1>
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <form action="<%= session_url %>" method="post">
        <%= auth_token %>
        <div class="form-group">
          <input class="form-control" type="text" name="user[username]" placeholder="Username...">

          <input class="form-control" type="password" name="user[password]" placeholder="Password...">

          <input class="form-control btn btn-primary" type="submit" value="Sign In">
        </div>
      </form><br>

      <form action="<%= session_url %>" method="post">
        <%= auth_token %>
        <input class="form-control" type="hidden" name="user[username]" value="<%= ENV["guest_username"] %>">
        <input class="form-control" type="hidden" name="user[password]" value="<%= ENV["guest_password"] %>">
        <input class="form-control btn btn-primary" type="submit" value="Sign In as Guest">
        <h3>The Marketplace of the Future!</h3>
      </form>

      <div>
        <%= link_to "Sign Up", new_user_url %>
      </div>
    </div>
  </div>
</div>
