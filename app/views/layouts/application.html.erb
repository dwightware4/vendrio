<!DOCTYPE tml>
<html>
<head>
  <title>Vendrio</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= ENV["google_api_key"] %>&libraries=places,visualization">
  </script>
  <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
</head>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<body class="<%= current_user ? 'main' : 'main-login' %>">

<script>
  window.cloudinary_name = "<%= ENV["cloudinary_name"] %>";
  window.cloudinary_preset = "<%= ENV["cloudinary_preset"] %>";
</script>

<% if current_user %>
  <script>
    window.userFirstName = "<%= current_user.f_name %>"
    window.userId = <%= current_user.id %>
  </script>
<% end %>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
